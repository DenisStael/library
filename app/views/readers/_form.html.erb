<div>
  <%= f.label :name %>
</div>
<div class="form-group">
  <%= f.text_field :name, class: "form-control" %>
</div>
<div>
  <%= f.label :email %>
</div>
<div class="form-group">
  <%= f.text_field :email, class: "form-control" %>
</div>
<div>
  <%= f.label :phone %>
</div>
<div class="form-group">
  <%= f.text_field :phone, class: "form-control" %>
</div>
<div>
  <%= f.label :birth_date %>
</div>
<div class="form-group">
  <%= f.date_field :birth_date, class: "form-control", start_year: 1900, end_year: Time.now.year, :order => [:day, :month, :year] %>
</div>
