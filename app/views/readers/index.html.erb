  <div class="row">
    <div class="col-xs-12 text-center">
      <h2>Leitores</h2>
    </div>
    <div class="col-xs-12">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>NÃºmero</th>
              <th>Nome</th>
